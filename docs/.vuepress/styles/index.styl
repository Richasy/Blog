.homeNavContainer{
}

.homeNavContainer ul{
 display: flex;
 align-items: center;
 justify-content: center;
 flex-wrap: wrap;
 list-style none;
}

.homeNavContainer li{
    width: 350px;
    padding: 20px 30px;
    border-radius: .2rem;
    margin: .5rem;
    border: 1px solid #eee;
    a{
        font-size: 1.2rem;
        color:$accentColor;
        font-weight: bold;
        display: block;
        margin-bottom: .3rem;
        outline: none;
    }
    p>p{
        font-size: .9rem;
        display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 3;
overflow: hidden;
    }
}

mark{
    max-width:70%;
    width: auto;
    text-align: center
    margin:0 auto;
    background-color: rgb(233,253,240);
    color:black;
    padding: .4rem;
    display: block;
    font-style: italic
}

.footnote-item{
    font-style: italic
    font-size:.9rem;
    }

.twoColumn{
display: flex;
justify-content: space-between
align-items: center;
>img,>p{
    width: 48%
}
}